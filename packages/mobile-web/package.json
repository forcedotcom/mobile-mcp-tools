{
  "name": "@salesforce/mobile-web-mcp-server",
  "version": "0.0.1-alpha.1",
  "type": "module",
  "files": [
    "dist",
    "resources",
    "README.md"
  ],
  "description": "Salesforce Mobile Web MCP Server",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/analysisSchema": {
      "types": "./dist/schemas/analysisSchema.d.ts",
      "import": "./dist/schemas/analysisSchema.js"
    },
    "./schemas/lwcSchema": {
      "types": "./dist/schemas/lwcSchema.d.ts",
      "import": "./dist/schemas/lwcSchema.js"
    }
  },
  "bin": {
    "sfdc-mobile-web-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc ",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint --max-warnings 0 --config ../../eslint.config.mjs \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "update-resources": "tsx src/scripts/update-type-declarations.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@salesforce/eslint-plugin-lwc-graph-analyzer": "^1.0.0",
    "eslint": "^9.37.0",
    "dedent": "^1.7.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.1",
    "@types/node": "^24.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tar": "^7.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.3"
  }
}
